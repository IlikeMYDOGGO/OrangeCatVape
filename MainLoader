-- UNIVERSAL ORANGE THEME INJECTOR --
local function applyOrangeTheme(object)
	if not object then return end
	
	pcall(function()
		if object:IsA('GuiObject') then
			-- Apply orange theme to backgrounds
			if object:IsA('Frame') or object:IsA('TextButton') or object:IsA('TextBox') or object:IsA('ImageButton') then
				if object.BackgroundTransparency < 1 then
					local originalColor = object.BackgroundColor3
					local brightness = (originalColor.R + originalColor.G + originalColor.B) / 3
					
					if brightness < 0.3 then
						object.BackgroundColor3 = Color3.fromRGB(40, 25, 15)
					elseif brightness < 0.6 then
						object.BackgroundColor3 = Color3.fromRGB(80, 50, 30)
					else
						object.BackgroundColor3 = Color3.fromRGB(255, 140, 60)
					end
				end
			end
			
			-- Apply orange to text
			if object:IsA('TextLabel') or object:IsA('TextButton') or object:IsA('TextBox') then
				local originalColor = object.TextColor3
				local brightness = (originalColor.R + originalColor.G + originalColor.B) / 3
				
				if brightness > 0.5 then
					object.TextColor3 = Color3.fromRGB(255, 200, 150)
				else
					object.TextColor3 = Color3.fromRGB(255, 160, 100)
				end
			end
			
			-- Apply orange to images
			if object:IsA('ImageLabel') or object:IsA('ImageButton') then
				if object.ImageColor3 ~= Color3.new(1, 1, 1) then
					object.ImageColor3 = Color3.fromRGB(255, 140, 60)
				end
			end
			
			-- Add orange glow to frames
			if object:IsA('Frame') and not object:FindFirstChild('OrangeGlow') then
				local glow = Instance.new('UIStroke')
				glow.Name = 'OrangeGlow'
				glow.Color = Color3.fromRGB(255, 140, 60)
				glow.Thickness = 1
				glow.Transparency = 0.6
				glow.Parent = object
			end
		end
	end)
end

local function recursiveApplyTheme(parent)
	for _, child in ipairs(parent:GetDescendants()) do
		applyOrangeTheme(child)
	end
end

-- Hook into all new GUIs being created
local function setupUniversalTheme()
	-- Apply to existing GUIs
	for _, player in ipairs(game:GetService('Players'):GetPlayers()) do
		if player:FindFirstChild('PlayerGui') then
			recursiveApplyTheme(player.PlayerGui)
		end
	end
	
	recursiveApplyTheme(gethui())
	
	-- Monitor for new GUI elements
	local function monitorContainer(container)
		container.DescendantAdded:Connect(function(descendant)
			task.wait(0.1)
			applyOrangeTheme(descendant)
		end)
		
		for _, child in ipairs(container:GetDescendants()) do
			applyOrangeTheme(child)
		end
	end
	
	-- Monitor PlayerGui
	for _, player in ipairs(game:GetService('Players'):GetPlayers()) do
		if player:FindFirstChild('PlayerGui') then
			monitorContainer(player.PlayerGui)
		end
	end
	
	-- Monitor gethui
	monitorContainer(gethui())
	
	-- Monitor new scripts/guis
	game:GetService('Players').LocalPlayer.PlayerGui.DescendantAdded:Connect(function(descendant)
		task.wait(0.1)
		applyOrangeTheme(descendant)
	end)
end

-- Global function to apply theme on demand
getgenv().applyOrangeTheme = function()
	setupUniversalTheme()
end

-- AUTO APPLY ON LOAD
task.spawn(function()
	task.wait(2)
	setupUniversalTheme()
	
	-- Keep reapplying for persistent theme
	while task.wait(5) do
		pcall(setupUniversalTheme)
	end
end)

